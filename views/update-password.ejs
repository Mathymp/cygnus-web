<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('./partials/head') %>
    <script src="https://unpkg.com/@phosphor-icons/web"></script>
    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
    <title>Nueva Contraseña | Cygnus</title>
    
    <style>
        /* --- ESTILOS BASE (Mismos que Login para coherencia) --- */
        * { box-sizing: border-box; outline: none; }

        body {
            margin: 0; padding: 0;
            height: 100vh; width: 100%;
            font-family: 'Inter', system-ui, sans-serif;
            background-color: #0f172a;
            /* Misma imagen HD */
            background-image: url('https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?q=80&w=2070&auto=format&fit=crop');
            background-size: cover;
            background-position: center;
            display: flex; align-items: center; justify-content: center;
            overflow: hidden;
        }

        .bg-overlay {
            position: absolute; inset: 0;
            background: linear-gradient(135deg, rgba(15, 23, 42, 0.94) 0%, rgba(30, 58, 138, 0.88) 100%);
            z-index: 1;
        }

        /* --- CONTENEDOR AMPLIO --- */
        .wrapper {
            position: relative; z-index: 10;
            width: 100%; 
            max-width: 500px; /* Más ancho para que respire */
            padding: 20px;
        }

        .glass-card {
            background: #ffffff;
            border-radius: 24px;
            padding: 48px 40px;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
            text-align: center;
            position: relative;
        }

        /* LOGO LIBRE (Sin restricciones feas) */
        .logo-area {
            margin-bottom: 20px;
            display: flex; justify-content: center; align-items: center;
            height: 55px;
        }
        .logo-img { max-height: 100%; width: auto; display: block; }
        
        h1 { margin: 0; font-size: 1.6rem; color: #0f172a; font-weight: 700; letter-spacing: -0.5px; }
        .subtitle { margin: 6px 0 25px; color: #64748b; font-size: 0.95rem; }

        /* --- FICHA DE USUARIO (Diseño Pro) --- */
        .user-card {
            background: #f8fafc; 
            border: 1px solid #e2e8f0; 
            border-radius: 16px;
            padding: 16px; 
            margin-bottom: 30px;
            display: flex; align-items: center; gap: 15px; 
            text-align: left;
            opacity: 0; transform: translateY(10px); transition: all 0.5s ease;
        }
        .user-card.visible { opacity: 1; transform: translateY(0); }

        .avatar {
            width: 48px; height: 48px; 
            background: #dbeafe; color: #1e40af;
            border-radius: 50%; display: flex; align-items: center; justify-content: center;
            font-weight: 700; font-size: 1.2rem;
            flex-shrink: 0;
        }
        
        .u-info { flex: 1; }
        .u-info h3 { margin: 0; font-size: 0.95rem; color: #1e293b; font-weight: 600; }
        .u-info p { margin: 2px 0 0; font-size: 0.8rem; color: #64748b; }
        
        .security-meta {
            margin-top: 6px; display: flex; align-items: center; gap: 8px;
        }
        .timer-badge {
            display: inline-flex; align-items: center; gap: 4px;
            font-size: 0.75rem; background: #ecfdf5; color: #059669;
            padding: 3px 8px; border-radius: 6px; border: 1px solid #d1fae5; font-weight: 500;
        }

        /* --- INPUTS --- */
        .form-group { margin-bottom: 20px; text-align: left; }
        .form-group label { display: block; font-size: 0.85rem; font-weight: 600; color: #334155; margin-bottom: 8px; }

        .input-box {
            position: relative; display: flex; align-items: center;
            width: 100%; height: 52px; background: #f8fafc;
            border: 1px solid #e2e8f0; border-radius: 12px; padding: 0 16px;
            transition: all 0.2s ease;
        }
        .input-box:focus-within { 
            border-color: #2563eb; background: #fff; 
            box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.1); 
        }
        .input-box i.icon-left { font-size: 1.3rem; color: #94a3b8; margin-right: 12px; }
        .input-box input { flex: 1; border: none; background: transparent; font-size: 1rem; color: #1e293b; height: 100%; }
        
        /* Botón Ojo */
        .toggle-pass {
            background: none; border: none; padding: 8px; cursor: pointer; color: #94a3b8;
            display: flex; align-items: center; justify-content: center;
            transition: color 0.2s;
        }
        .toggle-pass:hover { color: #2563eb; }

        /* Errores Input */
        .input-box.error { border-color: #ef4444 !important; background-color: #fef2f2 !important; animation: shake 0.3s; }
        .input-box.error i.icon-left { color: #ef4444 !important; }

        /* Mensaje de Coincidencia (Live Check) */
        #matchFeedback {
            font-size: 0.8rem; margin-top: 6px; font-weight: 500;
            display: flex; align-items: center; gap: 5px;
            opacity: 0; transition: opacity 0.2s; min-height: 20px;
        }
        #matchFeedback.visible { opacity: 1; }
        .match-success { color: #16a34a; }
        .match-error { color: #dc2626; }

        @keyframes shake { 0%, 100% { transform: translateX(0); } 25% { transform: translateX(-4px); } 75% { transform: translateX(4px); } }

        /* BOTÓN PRINCIPAL */
        .btn-main {
            width: 100%; height: 52px; background: #2563eb; color: white;
            border: none; border-radius: 12px; font-size: 1rem; font-weight: 600;
            cursor: pointer; transition: all 0.2s; box-shadow: 0 4px 6px -1px rgba(37, 99, 235, 0.2);
            margin-top: 10px;
        }
        .btn-main:hover { background: #1d4ed8; transform: translateY(-1px); }
        .btn-main.loading { color: transparent !important; pointer-events: none; position: relative; }
        .btn-main.loading::after {
            content: ""; position: absolute; left: 50%; top: 50%; width: 20px; height: 20px; margin: -10px;
            border: 2px solid rgba(255,255,255,0.3); border-top-color: #fff; border-radius: 50%; animation: spin 0.8s linear infinite;
        }
        @keyframes spin { to { transform: rotate(360deg); } }

        /* LOADER PÁGINA */
        #pageLoader {
            position: absolute; inset: 0; background: rgba(255,255,255,0.98); z-index: 50;
            display: flex; flex-direction: column; align-items: center; justify-content: center;
            border-radius: 24px; transition: opacity 0.4s ease;
        }
        .loader-spinner {
            width: 44px; height: 44px; border: 4px solid #e2e8f0; border-top-color: #2563eb;
            border-radius: 50%; animation: spin 1s linear infinite;
        }

        .alert-box { padding: 12px; border-radius: 8px; margin-bottom: 24px; font-size: 0.9rem; display: none; }
        .alert-error { background: #fee2e2; color: #991b1b; border: 1px solid #fecaca; }
        
        .footer { margin-top: 35px; font-size: 0.8rem; color: #94a3b8; border-top: 1px solid #f1f5f9; padding-top: 20px; }
    </style>
</head>
<body>

    <div class="bg-overlay"></div>

    <div class="wrapper">
        <div class="glass-card">
            
            <div id="pageLoader">
                <div class="loader-spinner"></div>
                <p style="margin-top: 15px; color: #64748b; font-size: 0.95rem; font-weight: 500;">Validando token de seguridad...</p>
            </div>

            <div class="logo-area">
                <img src="/img/logo.png" alt="Cygnus" class="logo-img" onerror="this.style.display='none'">
            </div>
            
            <h1 id="pageTitle">Recuperación</h1>
            <p id="pageSub" class="subtitle">Establece tu nueva contraseña</p>

            <div id="userCard" class="user-card">
                <div class="avatar" id="avatarLetter">U</div>
                <div class="u-info">
                    <h3 id="greetingName">Hola, Usuario</h3>
                    <p id="displayEmail">cargando...</p>
                    <div class="security-meta">
                        <div class="timer-badge">
                            <i class="ph-bold ph-clock"></i> <span id="timer">10:00</span>
                        </div>
                        <span style="font-size:0.75rem; color:#16a34a;"><i class="ph-fill ph-shield-check"></i> Verificado</span>
                    </div>
                </div>
            </div>

            <div id="globalAlert" class="alert-box alert-error"></div>

            <form id="updateForm">
                
                <div class="form-group">
                    <label>Nueva Contraseña</label>
                    <div class="input-box" id="box-pass">
                        <i class="ph-fill ph-lock-key icon-left"></i>
                        <input type="password" id="password" placeholder="Mínimo 6 caracteres">
                        <button type="button" class="toggle-pass" onclick="toggleVisibility('password', this)">
                            <i class="ph-fill ph-eye"></i>
                        </button>
                    </div>
                </div>

                <div class="form-group" style="margin-bottom: 10px;">
                    <label>Confirmar Contraseña</label>
                    <div class="input-box" id="box-confirm">
                        <i class="ph-fill ph-check-circle icon-left"></i>
                        <input type="password" id="confirmPassword" placeholder="Repite la contraseña">
                        <button type="button" class="toggle-pass" onclick="toggleVisibility('confirmPassword', this)">
                            <i class="ph-fill ph-eye"></i>
                        </button>
                    </div>
                    
                    <div id="matchFeedback">
                        <i class="ph-bold ph-info"></i> <span>Escribe para validar</span>
                    </div>
                </div>

                <button type="submit" class="btn-main" id="btnSubmit">Actualizar Contraseña</button>
            </form>

            <div class="footer">
                © 2026 Cygnus Group • Seguridad SSL Activa
            </div>
        </div>
    </div>

    <script>
        // CONFIGURACIÓN SUPABASE
        const supabaseUrl = '<%= supabaseUrl %>';
        const supabaseKey = '<%= supabaseKey %>';
        const sbClient = supabase.createClient(supabaseUrl, supabaseKey);

        let sessionAccessToken = null;

        // 1. INICIALIZACIÓN
        document.addEventListener('DOMContentLoaded', async () => {
            const loader = document.getElementById('pageLoader');
            startTimer(10 * 60);

            try {
                // Verificar hash en URL
                const { data: { session }, error } = await sbClient.auth.getSession();

                if (error || !session) throw new Error("Token inválido");

                sessionAccessToken = session.access_token;
                const email = session.user.email;
                // Intentamos obtener nombre del metadata si existe, sino usamos parte del mail
                const name = session.user.user_metadata?.name || "Agente";

                // Llenar Ficha
                document.getElementById('greetingName').innerText = `Hola, ${name}`;
                document.getElementById('displayEmail').innerText = email;
                document.getElementById('avatarLetter').innerText = name.charAt(0).toUpperCase();
                document.getElementById('userCard').classList.add('visible');

                loader.style.opacity = '0';
                setTimeout(() => loader.style.display = 'none', 400);

            } catch (err) {
                handleExpiredLink(loader);
            }
        });

        // 2. VALIDACIÓN EN TIEMPO REAL (Live Match)
        const p1 = document.getElementById('password');
        const p2 = document.getElementById('confirmPassword');
        const feedback = document.getElementById('matchFeedback');
        const feedIcon = feedback.querySelector('i');
        const feedText = feedback.querySelector('span');

        function checkMatch() {
            const v1 = p1.value;
            const v2 = p2.value;

            if (v2.length === 0) {
                feedback.classList.remove('visible');
                return;
            }

            feedback.classList.add('visible');

            if (v1 === v2 && v1.length >= 6) {
                // Coinciden
                feedback.className = 'match-success';
                feedIcon.className = 'ph-fill ph-check-circle';
                feedText.innerText = "Las contraseñas coinciden";
                document.getElementById('box-confirm').style.borderColor = "#16a34a";
            } else if (v1 !== v2) {
                // No coinciden
                feedback.className = 'match-error';
                feedIcon.className = 'ph-fill ph-x-circle';
                feedText.innerText = "No coinciden";
                document.getElementById('box-confirm').style.borderColor = "#dc2626";
            } else {
                 // Coinciden pero muy corta
                feedback.className = 'match-error';
                feedIcon.className = 'ph-fill ph-warning';
                feedText.innerText = "Mínimo 6 caracteres";
            }
        }

        p1.addEventListener('input', checkMatch);
        p2.addEventListener('input', checkMatch);

        // 3. TOGGLE PASSWORD (Para ambos inputs)
        window.toggleVisibility = function(inputId, btn) {
            const input = document.getElementById(inputId);
            const icon = btn.querySelector('i');
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.className = 'ph-fill ph-eye-slash';
            } else {
                input.type = 'password';
                icon.className = 'ph-fill ph-eye';
            }
        };

        // 4. ENVÍO DEL FORM
        document.getElementById('updateForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const btn = document.getElementById('btnSubmit');
            const pass = p1.value;
            const confirm = p2.value;

            // Validaciones finales
            if (pass.length < 6) return showGlobalError("La contraseña es muy corta (mínimo 6).");
            if (pass !== confirm) return showGlobalError("Las contraseñas no coinciden.");

            setLoading(btn, true);

            try {
                const res = await fetch('/update-password', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ password: pass, accessToken: sessionAccessToken })
                });

                const data = await res.json();

                if (data.success) {
                    btn.innerText = "¡Contraseña Actualizada!";
                    btn.style.backgroundColor = "#16a34a";
                    
                    const alert = document.getElementById('globalAlert');
                    alert.innerText = "Redirigiendo al login...";
                    alert.className = "alert-box alert-success";
                    alert.style.display = "block";

                    setTimeout(() => { window.location.href = '/login'; }, 1500);
                } else {
                    showGlobalError(data.message);
                    setLoading(btn, false);
                }

            } catch (err) {
                showGlobalError("Error de conexión.");
                setLoading(btn, false);
            }
        });

        // UTILS
        function handleExpiredLink(loader) {
            document.getElementById('pageTitle').innerText = "Enlace Caducado";
            document.getElementById('pageSub').innerText = "Por seguridad, este enlace ya no sirve.";
            document.getElementById('updateForm').style.display = 'none';
            document.getElementById('userCard').style.display = 'none';
            document.querySelector('.glass-card').innerHTML += `
                <div style="margin: 30px 0;">
                    <i class="ph-duotone ph-warning-circle" style="font-size: 3.5rem; color: #ef4444;"></i>
                    <p style="color: #64748b; margin-top: 15px;">Debes solicitar uno nuevo.</p>
                    <a href="/login" class="btn-main" style="text-decoration:none; margin-top:20px;">Volver al Login</a>
                </div>
            `;
            loader.style.display = 'none';
        }

        function showGlobalError(msg) {
            const box = document.getElementById('globalAlert');
            box.innerText = msg; box.style.display = 'block';
        }

        function setLoading(btn, state) {
            state ? btn.classList.add('loading') : btn.classList.remove('loading');
        }

        function startTimer(duration) {
            let timer = duration, minutes, seconds;
            const display = document.getElementById('timer');
            if(!display) return;
            const interval = setInterval(function () {
                minutes = parseInt(timer / 60, 10);
                seconds = parseInt(timer % 60, 10);
                minutes = minutes < 10 ? "0" + minutes : minutes;
                seconds = seconds < 10 ? "0" + seconds : seconds;
                display.textContent = minutes + ":" + seconds;
                if (--timer < 0) clearInterval(interval);
            }, 1000);
        }
    </script>
</body>
</html>