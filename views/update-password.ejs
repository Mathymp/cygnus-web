<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('./partials/head') %>
    <link rel="stylesheet" href="/css/login.css">
    <title>Nueva Contraseña | Cygnus</title>
    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
    
    <style>
        /* ESTILOS EXCLUSIVOS PARA ESTA VISTA */
        
        /* Loader Inicial */
        #pageLoader {
            position: absolute; inset: 0; background: rgba(255,255,255,0.9); z-index: 50;
            display: flex; flex-direction: column; align-items: center; justify-content: center;
            border-radius: 16px; transition: opacity 0.5s ease;
        }
        .spinner-large {
            width: 40px; height: 40px; border: 4px solid #e2e8f0; border-top-color: #2563eb;
            border-radius: 50%; animation: spin 1s linear infinite;
        }

        /* Tarjeta de Usuario Corporativa */
        .user-summary {
            background: #f8fafc; border: 1px solid #e2e8f0; border-radius: 10px;
            padding: 15px; margin-bottom: 25px; display: flex; align-items: center; gap: 12px;
        }
        .user-avatar {
            width: 42px; height: 42px; background: #bfdbfe; color: #1e40af;
            border-radius: 50%; display: flex; align-items: center; justify-content: center;
            font-weight: bold; font-size: 1.1rem;
        }
        .user-details h3 { margin: 0; font-size: 0.9rem; color: #334155; font-weight: 600; }
        .user-details p { margin: 0; font-size: 0.8rem; color: #64748b; }

        /* Badge de Seguridad / Timer */
        .security-badge {
            display: inline-flex; align-items: center; gap: 6px;
            background: #ecfdf5; color: #059669; font-size: 0.75rem; padding: 4px 10px;
            border-radius: 20px; border: 1px solid #d1fae5; margin-top: 5px;
        }
        .timer-text { font-weight: 700; font-variant-numeric: tabular-nums; }

        /* Estilos de Error (Heredados pero reforzados) */
        .input-wrapper.error { border-color: #ef4444 !important; background-color: #fef2f2; animation: shake 0.4s; }
        .input-wrapper.error i { color: #ef4444; }
        .error-msg { display: none; color: #ef4444; font-size: 0.8rem; margin-top: 5px; margin-left: 5px; }
        
        @keyframes shake { 0%, 100% { transform: translateX(0); } 25% { transform: translateX(-5px); } 75% { transform: translateX(5px); } }
        @keyframes spin { to { transform: rotate(360deg); } }
        
        /* Spinner Botón */
        .btn-loading { color: transparent !important; pointer-events: none; position: relative; }
        .btn-loading::after {
            content: ""; position: absolute; top: 50%; left: 50%; width: 18px; height: 18px; margin: -9px;
            border: 2px solid #fff; border-top-color: transparent; border-radius: 50%; animation: spin 0.8s linear infinite;
        }
    </style>
</head>
<body>

    <div class="bg-architect"></div>
    <div class="bg-overlay"></div>

    <main class="login-container">
        <div class="glass-card" style="position: relative; overflow: hidden;">
            
            <div id="pageLoader">
                <div class="spinner-large"></div>
                <p style="margin-top: 15px; color: #64748b; font-size: 0.9rem;">Verificando credenciales de seguridad...</p>
            </div>

            <div class="login-header">
                <div class="logo-circle">
                    <img src="/img/logo.png" alt="Cygnus" class="logo-img" onerror="this.style.display='none'">
                </div>
                <h1>Recuperación Segura</h1>
                <p>Establece tu nueva credencial de acceso</p>
            </div>

            <div id="userCard" class="user-summary hidden">
                <div class="user-avatar" id="avatarLetter">U</div>
                <div class="user-details">
                    <h3 id="displayEmail">Cargando usuario...</h3>
                    <p id="currentDate">Fecha: ...</p>
                    <div class="security-badge">
                        <i class="ph-fill ph-lock-key-open"></i>
                        Token válido por: <span id="timer" class="timer-text">10:00</span>
                    </div>
                </div>
            </div>

            <div class="form-container">
                <form id="updateForm" novalidate>
                    
                    <div class="input-group">
                        <label>Nueva Contraseña</label>
                        <div class="input-wrapper" id="wrap-pass">
                            <i class="ph-fill ph-lock-key"></i>
                            <input type="password" id="password" placeholder="Mínimo 6 caracteres">
                        </div>
                        <div class="error-msg" id="err-pass"></div>
                    </div>

                    <div class="input-group">
                        <label>Confirmar Contraseña</label>
                        <div class="input-wrapper" id="wrap-confirm">
                            <i class="ph-fill ph-check-circle"></i>
                            <input type="password" id="confirmPassword" placeholder="Repite la contraseña">
                        </div>
                        <div class="error-msg" id="err-confirm"></div>
                    </div>

                    <button type="submit" class="btn-primary" id="btnSubmit">
                        Actualizar Contraseña
                    </button>
                </form>

                <div id="globalError" style="display:none; margin-top:15px; padding:10px; background:#fef2f2; border:1px solid #fecaca; color:#991b1b; border-radius:8px; text-align:center; font-size:0.9rem;">
                </div>
            </div>

            <div class="login-footer">
                <p>© 2026 Cygnus Group • Seguridad Activa</p>
            </div>
        </div>
    </main>

    <script>
        // CONFIGURACIÓN SUPABASE (Pública)
        const supabaseUrl = '<%= supabaseUrl %>';
        const supabaseKey = '<%= supabaseKey %>';
        const supabase = supabase.createClient(supabaseUrl, supabaseKey);

        let sessionAccessToken = null;

        // --- 1. INICIALIZACIÓN Y VERIFICACIÓN DE TOKEN ---
        document.addEventListener('DOMContentLoaded', async () => {
            const loader = document.getElementById('pageLoader');
            const dateText = document.getElementById('currentDate');
            
            // Poner fecha bonita
            const now = new Date();
            dateText.innerText = `Solicitud: ${now.toLocaleDateString('es-CL')} ${now.toLocaleTimeString('es-CL', {hour: '2-digit', minute:'2-digit'})}`;

            // Iniciar temporizador visual (10 minutos fake para UX)
            startTimer(10 * 60);

            try {
                // Supabase detecta automáticamente el hash #access_token=... en la URL
                const { data: { session }, error } = await supabase.auth.getSession();

                if (error || !session) {
                    throw new Error("Enlace inválido o expirado");
                }

                // Token válido: Mostrar datos
                sessionAccessToken = session.access_token;
                const email = session.user.email;
                
                document.getElementById('displayEmail').innerText = email;
                document.getElementById('avatarLetter').innerText = email.charAt(0).toUpperCase();
                document.getElementById('userCard').classList.remove('hidden');
                
                // Ocultar loader suavemente
                loader.style.opacity = '0';
                setTimeout(() => loader.style.display = 'none', 500);

            } catch (err) {
                console.error(err);
                document.querySelector('.login-header h1').innerText = "Enlace Expirado";
                document.querySelector('.login-header p').innerText = "Por favor solicita uno nuevo.";
                document.querySelector('.form-container').innerHTML = `
                    <div style="text-align:center; padding:20px;">
                        <i class="ph-duotone ph-warning-circle" style="font-size:3rem; color:#ef4444; margin-bottom:15px;"></i>
                        <p style="color:#64748b; margin-bottom:20px;">Este enlace de seguridad ya no es válido.</p>
                        <a href="/login" class="btn-primary" style="display:inline-block; text-decoration:none;">Volver al Login</a>
                    </div>
                `;
                loader.style.display = 'none';
            }
        });

        // --- 2. LÓGICA DE ENVÍO (AJAX) ---
        document.getElementById('updateForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            clearErrors();

            const pass = document.getElementById('password').value;
            const confirm = document.getElementById('confirmPassword').value;
            const btn = document.getElementById('btnSubmit');

            // Validaciones Cliente
            let hasError = false;
            if (pass.length < 6) {
                showError('pass', 'Mínimo 6 caracteres.');
                hasError = true;
            }
            if (pass !== confirm) {
                showError('confirm', 'Las contraseñas no coinciden.');
                hasError = true;
            }
            if (hasError) return;

            setLoading(btn, true);

            try {
                // Enviar al Backend (Node.js) para procesar
                const res = await fetch('/update-password', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ 
                        password: pass,
                        accessToken: sessionAccessToken // Enviamos el token para que el backend verifique
                    })
                });

                const data = await res.json();

                if (data.success) {
                    // ÉXITO: Redirigir al login (donde habrá un mensaje flash si el backend lo puso)
                    // O podemos mostrar un mensaje bonito aquí antes de redirigir
                    btn.innerText = "¡Contraseña Actualizada!";
                    btn.style.backgroundColor = "#16a34a";
                    setTimeout(() => {
                        window.location.href = '/login';
                    }, 1500);
                } else {
                    showGlobalError(data.message);
                }

            } catch (err) {
                showGlobalError("Error de conexión. Intenta nuevamente.");
            } finally {
                if(btn.innerText !== "¡Contraseña Actualizada!") setLoading(btn, false);
            }
        });

        // --- UTILIDADES ---
        
        function startTimer(duration) {
            let timer = duration, minutes, seconds;
            const display = document.getElementById('timer');
            setInterval(function () {
                minutes = parseInt(timer / 60, 10);
                seconds = parseInt(timer % 60, 10);

                minutes = minutes < 10 ? "0" + minutes : minutes;
                seconds = seconds < 10 ? "0" + seconds : seconds;

                if(display) display.textContent = minutes + ":" + seconds;

                if (--timer < 0) {
                    timer = 0;
                    // Opcional: Deshabilitar form si llega a 0
                }
            }, 1000);
        }

        function showError(field, msg) {
            const wrap = document.getElementById('wrap-' + field);
            const txt = document.getElementById('err-' + field);
            if(wrap && txt) {
                wrap.classList.add('error');
                txt.innerText = msg;
                txt.style.display = 'block';
            }
        }

        function showGlobalError(msg) {
            const box = document.getElementById('globalError');
            box.innerText = msg;
            box.style.display = 'block';
        }

        function clearErrors() {
            document.querySelectorAll('.input-wrapper').forEach(el => el.classList.remove('error'));
            document.querySelectorAll('.error-msg').forEach(el => el.style.display = 'none');
            document.getElementById('globalError').style.display = 'none';
        }

        function setLoading(btn, isLoading) {
            if(isLoading) btn.classList.add('btn-loading');
            else btn.classList.remove('btn-loading');
        }
    </script>
</body>
</html>