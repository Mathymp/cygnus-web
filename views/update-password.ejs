<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('./partials/head') %>
    <script src="https://unpkg.com/@phosphor-icons/web"></script>
    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
    
    <title>Nueva Contraseña | Cygnus</title>
    
    <style>
        /* --- ESTILOS DARK PRO (Igual al Login) --- */
        * { box-sizing: border-box; outline: none; }

        body {
            margin: 0; padding: 0;
            height: 100vh; width: 100%;
            font-family: 'Inter', system-ui, sans-serif;
            background-color: #0f172a;
            /* Misma imagen de fondo que el login para continuidad */
            background-image: url('https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?q=80&w=1920&auto=format&fit=crop');
            background-size: cover;
            background-position: center;
            display: flex; align-items: center; justify-content: center;
            overflow: hidden;
        }

        .bg-overlay {
            position: absolute; inset: 0;
            background: linear-gradient(135deg, rgba(15, 23, 42, 0.9) 0%, rgba(30, 58, 138, 0.8) 100%);
            z-index: 1;
        }

        /* --- TARJETA GLASS --- */
        .wrapper {
            position: relative; z-index: 10;
            width: 100%; max-width: 420px;
            padding: 20px;
        }

        .glass-card {
            background: #ffffff;
            border-radius: 20px;
            padding: 40px 35px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
            text-align: center;
            position: relative;
        }

        /* Cabecera */
        .logo-area {
            width: 60px; height: 60px;
            background: #f1f5f9; border-radius: 50%;
            margin: 0 auto 15px;
            display: flex; align-items: center; justify-content: center;
        }
        .logo-area img { height: 30px; width: auto; }
        
        h1 { margin: 0; font-size: 1.4rem; color: #0f172a; font-weight: 700; }
        .subtitle { margin: 5px 0 20px; color: #64748b; font-size: 0.9rem; }

        /* --- FICHA DE USUARIO (Validación) --- */
        .user-card {
            background: #f8fafc; border: 1px solid #e2e8f0; border-radius: 12px;
            padding: 12px; margin-bottom: 25px;
            display: flex; align-items: center; gap: 12px;
            text-align: left;
            opacity: 0; transform: translateY(10px); /* Animación de entrada */
            transition: all 0.5s ease;
        }
        .user-card.visible { opacity: 1; transform: translateY(0); }

        .avatar {
            width: 38px; height: 38px;
            background: #dbeafe; color: #1e40af;
            border-radius: 50%; display: flex; align-items: center; justify-content: center;
            font-weight: 700; font-size: 1rem;
        }
        .u-info h3 { margin: 0; font-size: 0.85rem; color: #334155; font-weight: 600; }
        .u-info p { margin: 0; font-size: 0.75rem; color: #64748b; }
        
        .timer-badge {
            display: inline-flex; align-items: center; gap: 4px;
            font-size: 0.7rem; background: #ecfdf5; color: #059669;
            padding: 2px 8px; border-radius: 10px; margin-top: 4px; border: 1px solid #d1fae5;
        }

        /* --- FORMULARIO --- */
        .form-group { margin-bottom: 20px; text-align: left; }
        .form-group label { display: block; font-size: 0.85rem; font-weight: 600; color: #334155; margin-bottom: 6px; }

        .input-box {
            position: relative; display: flex; align-items: center;
            width: 100%; height: 48px; background: #f8fafc;
            border: 1px solid #e2e8f0; border-radius: 10px; padding: 0 12px;
            transition: all 0.2s ease;
        }
        .input-box:focus-within { border-color: #2563eb; background: #fff; box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.1); }
        .input-box i { font-size: 1.2rem; color: #94a3b8; margin-right: 10px; }
        .input-box input { flex: 1; width: 100%; height: 100%; border: none; background: transparent; font-size: 0.95rem; color: #1e293b; }
        
        /* Error States */
        .input-box.error { border-color: #ef4444 !important; background-color: #fef2f2 !important; animation: shake 0.3s; }
        .input-box.error i { color: #ef4444 !important; }
        .err-text { display: none; color: #dc2626; font-size: 0.75rem; margin-top: 5px; font-weight: 500; margin-left: 4px; }
        .err-text.show { display: block; }

        @keyframes shake { 0%, 100% { transform: translateX(0); } 25% { transform: translateX(-4px); } 75% { transform: translateX(4px); } }

        /* Botón */
        .btn-main {
            width: 100%; height: 48px; background: #2563eb; color: white;
            border: none; border-radius: 10px; font-size: 1rem; font-weight: 600;
            cursor: pointer; transition: all 0.2s; display: flex; align-items: center; justify-content: center;
            box-shadow: 0 4px 10px rgba(37, 99, 235, 0.2);
        }
        .btn-main:hover { background: #1d4ed8; transform: translateY(-2px); }
        .btn-main.loading { color: transparent !important; pointer-events: none; }
        .btn-main.loading::after {
            content: ""; position: absolute; width: 20px; height: 20px;
            border: 2px solid rgba(255,255,255,0.3); border-top-color: #fff;
            border-radius: 50%; animation: spin 0.8s linear infinite;
        }
        @keyframes spin { to { transform: rotate(360deg); } }

        /* --- LOADER PÁGINA COMPLETA --- */
        #pageLoader {
            position: absolute; inset: 0; background: rgba(255,255,255,0.95); z-index: 50;
            display: flex; flex-direction: column; align-items: center; justify-content: center;
            border-radius: 20px; transition: opacity 0.4s ease;
        }
        .loader-spinner {
            width: 40px; height: 40px; border: 4px solid #e2e8f0; border-top-color: #2563eb;
            border-radius: 50%; animation: spin 1s linear infinite;
        }

        /* Alerta Global */
        .alert-box { padding: 12px; border-radius: 8px; margin-bottom: 20px; font-size: 0.9rem; display: none; }
        .alert-error { background: #fee2e2; color: #991b1b; border: 1px solid #fecaca; }
        .alert-success { background: #dcfce7; color: #166534; border: 1px solid #bbf7d0; }
        
        .footer { margin-top: 25px; font-size: 0.75rem; color: #94a3b8; border-top: 1px solid #f1f5f9; padding-top: 15px; }
        .hidden { display: none !important; }
    </style>
</head>
<body>

    <div class="bg-overlay"></div>

    <div class="wrapper">
        <div class="glass-card">
            
            <div id="pageLoader">
                <div class="loader-spinner"></div>
                <p style="margin-top: 15px; color: #64748b; font-size: 0.9rem; font-weight: 500;">Validando token de seguridad...</p>
            </div>

            <div class="logo-area">
                <img src="/img/logo.png" alt="Cygnus" onerror="this.style.display='none'">
            </div>
            
            <h1 id="pageTitle">Recuperación Segura</h1>
            <p id="pageSub" class="subtitle">Establece tu nueva credencial de acceso</p>

            <div id="userCard" class="user-card">
                <div class="avatar" id="avatarLetter">U</div>
                <div class="u-info">
                    <h3 id="displayEmail">Cargando usuario...</h3>
                    <div class="timer-badge">
                        <i class="ph-bold ph-clock"></i> Expira en: <span id="timer">10:00</span>
                    </div>
                </div>
            </div>

            <div id="globalAlert" class="alert-box alert-error"></div>

            <form id="updateForm">
                <div class="form-group">
                    <label>Nueva Contraseña</label>
                    <div class="input-box" id="box-pass">
                        <i class="ph-fill ph-lock-key"></i>
                        <input type="password" id="password" placeholder="Mínimo 6 caracteres">
                    </div>
                    <div class="err-text" id="msg-pass">Error</div>
                </div>

                <div class="form-group">
                    <label>Confirmar Contraseña</label>
                    <div class="input-box" id="box-confirm">
                        <i class="ph-fill ph-check-circle"></i>
                        <input type="password" id="confirmPassword" placeholder="Repite la contraseña">
                    </div>
                    <div class="err-text" id="msg-confirm">Error</div>
                </div>

                <button type="submit" class="btn-main" id="btnSubmit">Actualizar Contraseña</button>
            </form>

            <div class="footer">
                © 2026 Cygnus Group • Seguridad SSL
            </div>
        </div>
    </div>

    <script>
        // --- 1. CONFIGURACIÓN ---
        // ARREGLO DEL ERROR: Usamos 'sbClient' en lugar de 'supabase' para evitar conflicto de nombres
        const supabaseUrl = '<%= supabaseUrl %>';
        const supabaseKey = '<%= supabaseKey %>';
        const sbClient = supabase.createClient(supabaseUrl, supabaseKey); // Nombre de variable cambiado

        let sessionAccessToken = null;

        // --- 2. INICIO Y VALIDACIÓN ---
        document.addEventListener('DOMContentLoaded', async () => {
            const loader = document.getElementById('pageLoader');
            
            // Iniciar timer visual (solo efecto UX)
            startTimer(10 * 60);

            try {
                // Verificar sesión actual (Supabase detecta el hash #access_token en la URL)
                const { data: { session }, error } = await sbClient.auth.getSession();

                if (error || !session) {
                    throw new Error("Token inválido");
                }

                // Token válido
                sessionAccessToken = session.access_token;
                const email = session.user.email;

                // Mostrar datos
                document.getElementById('displayEmail').innerText = email;
                document.getElementById('avatarLetter').innerText = email.charAt(0).toUpperCase();
                document.getElementById('userCard').classList.add('visible');

                // Quitar loader
                loader.style.opacity = '0';
                setTimeout(() => loader.style.display = 'none', 400);

            } catch (err) {
                // Si el token es inválido
                document.getElementById('pageTitle').innerText = "Enlace Expirado";
                document.getElementById('pageSub').innerText = "Este enlace de seguridad ya no es válido.";
                document.getElementById('updateForm').innerHTML = `
                    <div style="margin: 30px 0;">
                        <i class="ph-duotone ph-warning-circle" style="font-size: 3rem; color: #ef4444;"></i>
                        <p style="color: #64748b; margin-top: 10px;">Solicita un nuevo correo de recuperación.</p>
                        <a href="/login" class="btn-main" style="text-decoration:none; margin-top:20px;">Volver al Login</a>
                    </div>
                `;
                loader.style.display = 'none';
            }
        });

        // --- 3. ENVÍO DEL FORMULARIO ---
        document.getElementById('updateForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            resetUI();

            const pass = document.getElementById('password').value;
            const confirm = document.getElementById('confirmPassword').value;
            const btn = document.getElementById('btnSubmit');

            // Validaciones
            let error = false;
            if (pass.length < 6) { markError('pass', 'Mínimo 6 caracteres'); error = true; }
            if (pass !== confirm) { markError('confirm', 'Las contraseñas no coinciden'); error = true; }
            if (error) return;

            setLoading(btn, true);

            try {
                // Enviamos al backend
                const res = await fetch('/update-password', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ 
                        password: pass,
                        accessToken: sessionAccessToken // Token verificado
                    })
                });

                const data = await res.json();

                if (data.success) {
                    btn.innerText = "¡Contraseña Actualizada!";
                    btn.style.backgroundColor = "#16a34a";
                    
                    // Mostrar mensaje éxito
                    const alert = document.getElementById('globalAlert');
                    alert.innerText = "Redirigiendo al login...";
                    alert.className = "alert-box alert-success";
                    alert.style.display = "block";

                    setTimeout(() => { window.location.href = '/login'; }, 1500);
                } else {
                    showGlobalError(data.message);
                    setLoading(btn, false);
                }

            } catch (err) {
                showGlobalError("Error de conexión. Intenta nuevamente.");
                setLoading(btn, false);
            }
        });

        // --- UTILIDADES ---
        function markError(id, msg) {
            const box = document.getElementById('box-' + id);
            const txt = document.getElementById('msg-' + id);
            if(box && txt) {
                box.classList.add('error');
                txt.innerText = msg;
                txt.classList.add('show');
            }
        }

        function showGlobalError(msg) {
            const box = document.getElementById('globalAlert');
            box.innerText = msg;
            box.style.display = 'block';
        }

        function resetUI() {
            document.querySelectorAll('.input-box').forEach(el => el.classList.remove('error'));
            document.querySelectorAll('.err-text').forEach(el => el.classList.remove('show'));
            document.getElementById('globalAlert').style.display = 'none';
        }

        function setLoading(btn, loading) {
            if(loading) btn.classList.add('loading');
            else btn.classList.remove('loading');
        }

        function startTimer(duration) {
            let timer = duration, minutes, seconds;
            const display = document.getElementById('timer');
            if(!display) return;
            
            const interval = setInterval(function () {
                minutes = parseInt(timer / 60, 10);
                seconds = parseInt(timer % 60, 10);
                minutes = minutes < 10 ? "0" + minutes : minutes;
                seconds = seconds < 10 ? "0" + seconds : seconds;
                display.textContent = minutes + ":" + seconds;
                if (--timer < 0) {
                    clearInterval(interval);
                    display.textContent = "00:00";
                }
            }, 1000);
        }
    </script>
</body>
</html>