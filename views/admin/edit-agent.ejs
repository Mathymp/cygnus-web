<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/publish.css">
    <link rel="stylesheet" href="/css/team.css">
    <style>
        /* Estilos para el campo de contraseña y ojito */
        .password-wrapper {
            position: relative;
            display: flex;
            align-items: center;
        }
        .password-wrapper input {
            padding-right: 40px; /* Espacio para el icono */
        }
        .btn-toggle-pass {
            position: absolute;
            right: 10px;
            background: none;
            border: none;
            color: #64748b;
            cursor: pointer;
            padding: 5px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: color 0.2s;
            z-index: 2;
        }
        .btn-toggle-pass:hover {
            color: #0f172a;
        }

        /* Ajustes del contenedor */
        .publish-container {
            max-width: 800px;
            margin: 2rem auto;
        }
        
        /* Botón de guardar mejorado */
        .btn-publish-submit {
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: #2563eb;
            color: white;
            border: none;
            cursor: pointer;
            box-shadow: 0 4px 6px -1px rgba(37, 99, 235, 0.2);
            padding: 14px 60px; 
            font-size: 1.1rem; 
            border-radius: 50px;
        }
        .btn-publish-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 15px -3px rgba(37, 99, 235, 0.3);
            background: #1d4ed8;
        }
    </style>
</head>
<body class="dashboard-body">
    <div class="app-layout">
        <%- include('../partials/sidebar-admin') %>

        <main class="main-content">
            <div class="dashboard-scroll">
                
                <div class="dash-top-bar">
                    <div class="welcome-text">
                        <h1>Editar Agente</h1>
                        <p>Modificando perfil de: <strong><%= agent.name %></strong></p>
                    </div>
                    <div>
                        <a href="/admin/team" class="btn-secondary" style="text-decoration: none; padding: 10px 20px; background: #fff; border: 1px solid #ddd; border-radius: 50px; color: #555; font-weight: 600; transition: all 0.2s;">
                            <i class="ph-bold ph-arrow-left"></i> Volver
                        </a>
                    </div>
                </div>

                <div class="publish-container">
                    
                    <%- include('../partials/alerts') %>

                    <form action="/admin/agents/edit" method="POST" class="publish-form" id="editAgentForm">
                        <input type="hidden" name="id" value="<%= agent.id %>">
                        
                        <% if (locals.error) { %>
                            <div style="background: #fef2f2; color: #ef4444; padding: 12px; border-radius: 8px; margin-bottom: 20px; border: 1px solid #fecaca; font-size: 0.9rem;">
                                <i class="ph-bold ph-warning-circle"></i> <%= error %>
                            </div>
                        <% } %>

                        <div class="form-section">
                            <h3 class="section-title"><i class="ph-bold ph-user"></i> Datos Personales</h3>
                            
                            <div class="form-grid">
                                <div class="input-group">
                                    <label>Nombre Completo</label>
                                    <input type="text" name="name" value="<%= agent.name %>" required>
                                </div>
                                
                                <div class="input-group">
                                    <label>Correo Electrónico (No editable)</label>
                                    <input type="email" value="<%= agent.email %>" disabled style="background: #f1f5f9; cursor: not-allowed; color: #64748b;">
                                </div>

                                <div class="input-group">
                                    <label>Teléfono</label>
                                    <div class="phone-input-wrapper" style="display: flex; align-items: center; border: 1px solid #ddd; border-radius: 12px; overflow: hidden; background: white;">
                                        <span style="background: #f8fafc; padding: 12px; color: #64748b; font-weight: 600; border-right: 1px solid #ddd;">+56</span>
                                        <input type="text" id="phoneInput" name="phone" value="<%= agent.phone %>" style="border: none; box-shadow: none;" maxlength="11">
                                    </div>
                                </div>

                                <div class="input-group">
                                    <label>Cargo / Puesto</label>
                                    <input type="text" name="position" value="<%= agent.position %>">
                                </div>
                            </div>
                        </div>

                        <div class="form-section" style="border-top: 1px solid #e2e8f0; padding-top: 20px; margin-top: 20px;">
                            <h3 class="section-title" style="color: #ea580c;"><i class="ph-bold ph-lock-key"></i> Seguridad</h3>
                            <p style="font-size: 0.9rem; color: #64748b; margin-bottom: 15px;">Deja este campo vacío si NO quieres cambiar la contraseña actual.</p>
                            
                            <div class="form-grid">
                                <div class="input-group full-width">
                                    <label>Nueva Contraseña</label>
                                    <div class="password-wrapper">
                                        <input type="password" id="passwordInput" name="password" placeholder="Escribe para cambiar la contraseña" minlength="6">
                                        <button type="button" class="btn-toggle-pass" onclick="togglePasswordVisibility(event)">
                                            <i class="ph-bold ph-eye" id="eyeIcon"></i>
                                        </button>
                                    </div>
                                    <small style="color: #64748b; margin-top: 5px; display: block;">Mínimo 6 caracteres.</small>
                                </div>
                            </div>
                        </div>

                        <div class="form-actions" style="margin-top: 2rem; display: flex; justify-content: center;">
                            <button type="submit" class="btn-publish-submit">
                                <i class="ph-bold ph-floppy-disk"></i> Guardar Cambios
                            </button>
                        </div>

                    </form>
                </div>

            </div>
        </main>
    </div>

    <script>
        // 1. Formateador de Teléfono (9 xxxx xxxx)
        const phoneInput = document.getElementById('phoneInput');
        
        function formatPhone(input) {
            let numbers = input.value.replace(/\D/g, '');
            if (numbers.length > 9) numbers = numbers.substring(0, 9);
            
            if (numbers.length > 0) {
                let formatted = numbers;
                if (numbers.length > 1) formatted = numbers.substring(0, 1) + ' ' + numbers.substring(1);
                if (numbers.length > 5) formatted = formatted.substring(0, 6) + ' ' + formatted.substring(6);
                input.value = formatted;
            } else {
                input.value = '';
            }
        }

        if (phoneInput) {
            phoneInput.addEventListener('input', function() { formatPhone(this); });
            // Formatear al cargar la página si ya viene con datos
            document.addEventListener("DOMContentLoaded", () => {
                if(phoneInput.value) formatPhone(phoneInput);
            });
        }

        // 2. Toggle Password (Ojito)
        function togglePasswordVisibility(e) {
            // Prevenir que el botón haga submit del form si está dentro del form
            if(e) e.preventDefault();
            
            const passInput = document.getElementById('passwordInput');
            const icon = document.getElementById('eyeIcon');
            
            if (passInput.type === 'password') {
                passInput.type = 'text';
                icon.classList.remove('ph-eye');
                icon.classList.add('ph-eye-slash');
            } else {
                passInput.type = 'password';
                icon.classList.remove('ph-eye-slash');
                icon.classList.add('ph-eye');
            }
        }
    </script>
</body>
</html>