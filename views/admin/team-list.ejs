<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/team.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    
    <div class="app-layout">
        
        <%- include('../partials/sidebar-admin') %>

        <main class="main-content">
            
            <div class="dashboard-scroll">
                
                <!-- Cabecera con título y botón de acción -->
                <div class="dash-top-bar">
                    <div class="welcome-text">
                        <h1>Gestión de Talento</h1>
                        <p>Administra los accesos y roles de tu equipo.</p>
                    </div>
                    <div>
                        <a href="/admin/add-agent" class="btn-publish-big">
                            <i class="ph-bold ph-user-plus"></i> Nuevo Agente
                        </a>
                    </div>
                </div>

                <!-- Alertas (centrado, pero sin max-width restrictivo) -->
                <div class="alerts-container">
                    <%- include('../partials/alerts') %>
                </div>

                <!-- Tarjeta que contiene la tabla -->
                <div class="team-table-container">
                    
                    <div class="team-panel-header">
                        <h3 class="panel-title">Directorio de Personal</h3>
                        <!-- Puedes agregar un contador o filtros aquí si lo deseas -->
                    </div>

                    <!-- Tabla de agentes -->
                    <div class="table-responsive">
                        <table class="modern-table">
                            <thead>
                                <tr>
                                    <th>Profesional</th>
                                    <th>Contacto</th>
                                    <th>Rol / Cargo</th>
                                    <th class="actions-header">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(agents && agents.length > 0) { %>
                                    <% agents.forEach(agent => { %>
                                    <tr class="agent-row" id="row-<%= agent.id %>">
                                        <td>
                                            <div class="profile-cell">
                                                <% if(agent.photo_url) { %>
                                                    <img src="<%= agent.photo_url %>" class="agent-avatar" alt="<%= agent.name %>">
                                                <% } else { %>
                                                    <div class="agent-avatar placeholder">
                                                        <%= agent.name.charAt(0).toUpperCase() %>
                                                    </div>
                                                <% } %>
                                                <div class="agent-info">
                                                    <div class="agent-name"><%= agent.name %></div>
                                                    <div class="agent-email"><%= agent.email %></div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <% if(agent.phone) { %>
                                                <div class="phone-cell">
                                                    <i class="ph-fill ph-whatsapp-logo"></i>
                                                    +56 <%= agent.phone %>
                                                </div>
                                            <% } else { %>
                                                <span class="no-phone">—</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <span class="badge-role <%= agent.role === 'admin' ? 'role-admin' : 'role-corredor' %>">
                                                <%= agent.position || (agent.role === 'admin' ? 'Administrador' : 'Corredor') %>
                                            </span>
                                        </td>
                                        <td class="actions-cell">
                                            <a href="/admin/edit-agent/<%= agent.id %>" class="btn-action btn-edit" title="Editar Perfil">
                                                <i class="ph-bold ph-pencil-simple"></i>
                                            </a>
                                            
                                            <% if (user.id !== agent.id) { %>
                                                <button class="btn-action btn-delete" title="Desvincular" 
                                                    onclick="openDeleteModal('<%= agent.id %>', '<%= agent.name %>')">
                                                    <i class="ph-bold ph-trash"></i>
                                                </button>
                                            <% } %>
                                        </td>
                                    </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="4" class="empty-state">
                                            No hay agentes registrados.
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Espaciador inferior -->
                <div style="height: 50px;"></div>

            </div> <!-- .dashboard-scroll -->
        </main>
    </div> <!-- .app-layout -->

    <!-- Modal de confirmación de eliminación -->
    <div id="deleteModal" class="modal-overlay">
        <div class="modal-container">
            <div class="modal-icon-warning">
                <i class="ph-bold ph-warning"></i>
            </div>
            <h2 class="modal-title">¿Desvincular Agente?</h2>
            <p class="modal-desc">
                Estás a punto de eliminar a <strong id="deleteAgentName"></strong>.<br>
                Sus propiedades activas quedarán <strong>sin asignar</strong> hasta que las reasignes manualmente.
            </p>
            <div class="modal-actions">
                <button type="button" class="btn-modal-cancel" onclick="closeDeleteModal()">Cancelar</button>
                <button type="button" id="confirmDeleteBtn" class="btn-modal-confirm" onclick="confirmDelete()">
                    Confirmar Baja
                </button>
            </div>
        </div>
    </div>

    <script>
        // === MODAL LOGIC ===
        const deleteModal = document.getElementById('deleteModal');
        const deleteNameSpan = document.getElementById('deleteAgentName');
        let agentIdToDelete = null;

        function openDeleteModal(id, name) {
            agentIdToDelete = id;
            deleteNameSpan.textContent = name;
            deleteModal.classList.add('active');
        }
        function closeDeleteModal() {
            agentIdToDelete = null;
            deleteModal.classList.remove('active');
        }
        async function confirmDelete() {
            if (!agentIdToDelete) return;
            const btn = document.getElementById('confirmDeleteBtn');
            const originalText = btn.innerText;
            btn.innerText = "Procesando...";
            btn.disabled = true;
            btn.style.opacity = "0.7";
            try {
                const response = await fetch(`/admin/agents/delete/${agentIdToDelete}`, { method: 'DELETE' });
                const data = await response.json();
                if (data.success) window.location.reload();
                else { alert("Error: " + data.message); resetBtn(); }
            } catch (error) {
                alert("Error de conexión");
                resetBtn();
            }
            function resetBtn() {
                btn.innerText = originalText;
                btn.disabled = false;
                btn.style.opacity = "1";
                closeDeleteModal();
            }
        }
        window.onclick = function(event) {
            if (event.target == deleteModal) closeDeleteModal();
        };
    </script>
</body>
</html>