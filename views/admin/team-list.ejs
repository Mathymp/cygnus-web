<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head') %>
    <!-- TEAM.CSS con !important (lo cargamos igual) -->
    <link rel="stylesheet" href="/css/team.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- ESTILOS INLINE DE EMERGENCIA (se aplican inmediatamente) -->
    <style>
        /* RESPALDO ABSOLUTO: si el CSS externo falla, esto lo pisa */
        .app-layout { display: flex !important; height: 100vh !important; width: 100vw !important; overflow: hidden !important; }
        aside.sidebar { width: 280px !important; height: 100vh !important; position: sticky !important; top: 0 !important; left: 0 !important; flex-shrink: 0 !important; overflow-y: auto !important; background: white !important; border-right: 1px solid #e2e8f0 !important; }
        .main-content { flex: 1 1 0 !important; height: 100vh !important; display: flex !important; flex-direction: column !important; overflow: hidden !important; background: #f8fafc !important; }
        .dashboard-scroll { flex: 1 1 0 !important; overflow-y: auto !important; height: 0 !important; min-height: 0 !important; padding: 2rem !important; }
    </style>
</head>
<body class="dashboard-body" style="margin:0; padding:0; height:100vh; overflow:hidden;">
    <!-- ESTRUCTURA CON !important EN CADA ESTILO INLINE (anula todo) -->
    <div class="app-layout" style="display: flex !important; height: 100vh !important; width: 100vw !important; overflow: hidden !important;">
        
        <!-- SIDEBAR - Se asume que el partial genera un <aside class="sidebar"> -->
        <%- include('../partials/sidebar-admin') %>

        <!-- MAIN: ALTURA COMPLETA Y SCREEN -->
        <main class="main-content" style="flex: 1 1 0 !important; height: 100vh !important; display: flex !important; flex-direction: column !important; overflow: hidden !important; background-color: #f8fafc !important;">
            
            <!-- CONTENEDOR SCROLL (EL ÃšNICO QUE HACE SCROLL) -->
            <div class="dashboard-scroll" style="flex: 1 1 0 !important; overflow-y: auto !important; height: 0 !important; min-height: 0 !important; padding: 2rem 2rem 3rem 2rem !important;">
                
                <!-- TOP BAR -->
                <div class="dash-top-bar">
                    <div class="welcome-text">
                        <h1>GestiÃ³n de Talento</h1>
                        <p>Administra los accesos y roles de tu equipo.</p>
                    </div>
                    <div>
                        <a href="/admin/add-agent" class="btn-publish-big">
                            <i class="ph-bold ph-user-plus"></i> Nuevo Agente
                        </a>
                    </div>
                </div>

                <!-- ALERTAS -->
                <div style="max-width: 1200px; margin: 0 auto; padding: 0 1.5rem;">
                    <%- include('../partials/alerts') %>
                </div>

                <!-- TABLA DE AGENTES -->
                <div class="team-table-container">
                    <div class="team-panel-header">
                        <h3 class="panel-title" style="margin: 0;">Directorio de Personal</h3>
                    </div>

                    <table class="modern-table">
                        <thead>
                            <tr>
                                <th style="padding-left: 2rem;">Profesional</th>
                                <th>Contacto</th>
                                <th>Rol / Cargo</th>
                                <th style="text-align: right; padding-right: 2rem;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(agents && agents.length > 0) { %>
                                <% agents.forEach(agent => { %>
                                <tr class="agent-row" id="row-<%= agent.id %>">
                                    <td style="padding-left: 2rem;">
                                        <div class="prop-flex">
                                            <% if(agent.photo_url) { %>
                                                <img src="<%= agent.photo_url %>" class="agent-avatar-img" alt="<%= agent.name %>">
                                            <% } else { %>
                                                <div class="agent-avatar-placeholder">
                                                    <%= agent.name.charAt(0).toUpperCase() %>
                                                </div>
                                            <% } %>
                                            <div>
                                                <div class="agent-name"><%= agent.name %></div>
                                                <div class="agent-email"><%= agent.email %></div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <% if(agent.phone) { %>
                                            <div style="display: flex; align-items: center; gap: 6px; font-weight: 600; font-size: 0.9rem; color: #334155;">
                                                <i class="ph-fill ph-whatsapp-logo" style="color: #25D366; font-size: 1.1rem;"></i>
                                                +56 <%= agent.phone %>
                                            </div>
                                        <% } else { %>
                                            <span style="color: #64748b;">--</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <span class="badge-role <%= agent.role === 'admin' ? 'role-admin' : 'role-corredor' %>">
                                            <%= agent.position || (agent.role === 'admin' ? 'Administrador' : 'Corredor') %>
                                        </span>
                                    </td>
                                    <td style="text-align: right; padding-right: 2rem;">
                                        <div class="actions-cell">
                                            <a href="/admin/edit-agent/<%= agent.id %>" class="btn-action btn-edit" title="Editar Perfil">
                                                <i class="ph-bold ph-pencil-simple"></i>
                                            </a>
                                            
                                            <% if (user.id !== agent.id) { %>
                                                <button class="btn-action btn-delete" title="Desvincular" 
                                                    onclick="openDeleteModal('<%= agent.id %>', '<%= agent.name %>')">
                                                    <i class="ph-bold ph-trash"></i>
                                                </button>
                                            <% } %>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="4" style="text-align: center; padding: 3rem; color: #64748b;">
                                        No hay agentes registrados.
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>

            </div> <!-- /.dashboard-scroll -->
        </main>
    </div> <!-- /.app-layout -->

    <!-- MODAL ELIMINAR -->
    <div id="deleteModal" class="modal-overlay">
        <div class="modal-container">
            <div class="modal-icon-warning">
                <i class="ph-bold ph-warning"></i>
            </div>
            <h2 class="modal-title">Â¿Desvincular Agente?</h2>
            <p class="modal-desc">
                EstÃ¡s a punto de eliminar a <strong id="deleteAgentName" style="color: #111827;"></strong>.<br>
                Sus propiedades activas quedarÃ¡n <strong>sin asignar</strong> hasta que las reasignes manualmente.
            </p>
            <div class="modal-actions">
                <button type="button" class="btn-modal-cancel" onclick="closeDeleteModal()">Cancelar</button>
                <button type="button" id="confirmDeleteBtn" class="btn-modal-confirm" onclick="confirmDelete()">
                    Confirmar Baja
                </button>
            </div>
        </div>
    </div>

    <script>
        // === MODAL LOGIC ===
        const deleteModal = document.getElementById('deleteModal');
        const deleteNameSpan = document.getElementById('deleteAgentName');
        let agentIdToDelete = null;

        function openDeleteModal(id, name) {
            agentIdToDelete = id;
            deleteNameSpan.textContent = name;
            deleteModal.classList.add('active');
        }
        function closeDeleteModal() {
            agentIdToDelete = null;
            deleteModal.classList.remove('active');
        }
        async function confirmDelete() {
            if (!agentIdToDelete) return;
            const btn = document.getElementById('confirmDeleteBtn');
            const originalText = btn.innerText;
            btn.innerText = "Procesando...";
            btn.disabled = true;
            btn.style.opacity = "0.7";
            try {
                const response = await fetch(`/admin/agents/delete/${agentIdToDelete}`, { method: 'DELETE' });
                const data = await response.json();
                if (data.success) window.location.reload();
                else { alert("Error: " + data.message); resetBtn(); }
            } catch (error) {
                alert("Error de conexiÃ³n");
                resetBtn();
            }
            function resetBtn() {
                btn.innerText = originalText;
                btn.disabled = false;
                btn.style.opacity = "1";
                closeDeleteModal();
            }
        }
        window.onclick = function(event) {
            if (event.target == deleteModal) closeDeleteModal();
        };

        // === NUCLEAR SCRIPT: FORZAR SIDEBAR 100% Y SCROLL ===
        (function forcePerfectLayout() {
            // Forzar en app-layout
            const appLayout = document.querySelector('.app-layout');
            if (appLayout) {
                appLayout.style.setProperty('display', 'flex', 'important');
                appLayout.style.setProperty('height', '100vh', 'important');
                appLayout.style.setProperty('width', '100vw', 'important');
                appLayout.style.setProperty('overflow', 'hidden', 'important');
            }

            // Forzar sidebar
            const sidebar = document.querySelector('aside.sidebar');
            if (sidebar) {
                sidebar.style.setProperty('width', '280px', 'important');
                sidebar.style.setProperty('height', '100vh', 'important');
                sidebar.style.setProperty('position', 'sticky', 'important');
                sidebar.style.setProperty('top', '0', 'important');
                sidebar.style.setProperty('left', '0', 'important');
                sidebar.style.setProperty('flex-shrink', '0', 'important');
                sidebar.style.setProperty('overflow-y', 'auto', 'important');
                sidebar.style.setProperty('background', '#ffffff', 'important');
            }

            // Forzar main-content
            const mainContent = document.querySelector('.main-content');
            if (mainContent) {
                mainContent.style.setProperty('flex', '1 1 0', 'important');
                mainContent.style.setProperty('height', '100vh', 'important');
                mainContent.style.setProperty('display', 'flex', 'important');
                mainContent.style.setProperty('flex-direction', 'column', 'important');
                mainContent.style.setProperty('overflow', 'hidden', 'important');
            }

            // Forzar dashboard-scroll (el que debe scrollear)
            const scrollContainer = document.querySelector('.dashboard-scroll');
            if (scrollContainer) {
                scrollContainer.style.setProperty('flex', '1 1 0', 'important');
                scrollContainer.style.setProperty('overflow-y', 'auto', 'important');
                scrollContainer.style.setProperty('height', '0', 'important');
                scrollContainer.style.setProperty('min-height', '0', 'important');
                scrollContainer.style.setProperty('padding', '2rem', 'important');
                
                // Opcional: forzar barra siempre visible (para debug)
             scrollContainer.style.setProperty('overflow-y', 'scroll', 'important');
            }

            // Mensaje de Ã©xito
            console.log('ðŸ”¥ LAYOUT NUCLEAR APLICADO: sidebar 100% y scroll listo');
        })();
    </script>
</body>
</html>