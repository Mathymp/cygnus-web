                    <% }) %>
                <% } else { %>
                    <div class="swiper-slide">
                        <div class="slide-bg" role="img" aria-label="Casas y Departamentos en Venta" style="background-image: url('https://images.unsplash.com/photo-1600607687939-ce8a6c25118c?q=80&w=2000&auto=format&fit=crop'); background-position: center;"></div>
