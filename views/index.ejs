    <section class="results-section" id="propiedades-anchor">
        <div class="results-header">
            <h2 class="results-title">Propiedades Destacadas en Venta y Arriendo <span class="count-badge"><%= props.length %></span></h2>
        </div>

        <% if(props.length === 0) { %>
            <div class="no-results">
                <div class="empty-state-icon">
                    <i class="ph-duotone ph-magnifying-glass"></i>
                </div>
                <h3>No encontramos propiedades destacadas</h3>
                <p>Intenta cambiar la región o quitar los filtros de precio.</p>
                <a href="/propiedades" class="btn-reset">Ver todo el inventario</a>
            </div>
        <% } %>

        <div class="properties-grid">
            <% props.forEach(p => { 
                // Imagen Principal
                let img = '/img/logo.png';
                try { 
                    if(p.images && p.images.length) {
                        img = (typeof p.images[0] === 'string' ? p.images[0] : p.images[0].url);
                        // SEO Imagen: Si es de Cloudinary, optimizar tamaño
                        if(img.includes('cloudinary') && !img.includes('w_')) {
                             img = img.replace('/upload/', '/upload/w_400,h_300,c_fill,q_auto/');
                        }
                    }
                } catch(e){}

                // Cálculo de Precios
                let rawPrice = parseFloat(p.price || 0);
                let currency = p.currency || 'UF';
                let price1 = '', price2 = '';
                if(currency === 'UF') {
                    price1 = fmtUF(rawPrice);
                    price2 = fmtCLP(rawPrice * ufVal);
                } else {
                    price1 = fmtCLP(rawPrice);
                    price2 = fmtUF(rawPrice / ufVal);
                }

                // Dirección Inteligente
                const joinAddr = (...parts) => parts.filter(part => part && part.toString().trim().length > 0).join(', ');
                let fullAddress = joinAddr(p.address_commune, p.city, p.address_region || p.region);

                // Estado (Vendido/Arrendado)
                let statusRaw = (p.status || p.state || 'disponible').toLowerCase().trim();
                let statusConfig = { text: '', glassClass: '', showOverlay: false };
                if (statusRaw.includes('vend') || statusRaw.includes('arrendad') || statusRaw.includes('reserv')) {
                    statusConfig.showOverlay = true;
                    if (statusRaw.includes('vend')) {
                        statusConfig.text = 'VENDIDO';
                        statusConfig.glassClass = 'glass-sold';
                    } else if (statusRaw.includes('arrend')) {
                        statusConfig.text = 'ARRENDADO';
                        statusConfig.glassClass = 'glass-rented';
                    } else if (statusRaw.includes('reserv')) {
                        statusConfig.text = 'RESERVADO';
                        statusConfig.glassClass = 'glass-reserved';
                    }
                }
            %>
            
            <article class="property-card" onclick="window.location.href='/propiedad/<%= p.id %>'">
                <div class="card-image-wrapper">
                    <img src="<%= img %>" alt="<%= p.title %> en <%= p.address_commune %>" loading="lazy">
                    
                    <div class="card-badges-top">
                        <div class="card-badge op-badge <%= p.operation_type === 'Arriendo' ? 'rent' : 'sale' %>">
                            <%= p.operation_type %>
                        </div>
                        <div class="card-badge type-badge">
                            <%= p.category %>
                        </div>
                    </div>

                    <% if(statusConfig.showOverlay) { %>
                        <div class="status-overlay-center">
                            <div class="status-glass-card <%= statusConfig.glassClass %>">
                                <%= statusConfig.text %>
                            </div>
                        </div>
                    <% } %>
                </div>
                
                <div class="card-content">
                    <div class="card-prices-row">
                        <span class="price-tag primary"><%= price1 %></span>
                        <span class="price-divider">|</span>
                        <span class="price-tag secondary"><%= price2 %></span>
                    </div>
                    
                    <h3 class="card-title"><%= p.title %></h3>
                    <p class="card-address" title="<%= fullAddress %>">
                        <i class="ph-fill ph-map-pin"></i> <%= fullAddress %>
                    </p>

                    <div class="card-features">
                        <% if(p.bedrooms > 0) { %><span><i class="ph-bold ph-bed"></i> <%= p.bedrooms %></span><% } %>
                        <% if(p.bathrooms > 0) { %><span><i class="ph-bold ph-shower"></i> <%= p.bathrooms %></span><% } %>
                        <% if(p.surface_total > 0) { %><span><i class="ph-bold ph-ruler"></i> <%= p.surface_total %> m²</span><% } %>
                    </div>
                </div>
            </article>
            <% }) %>
        </div>
    </section>
    
