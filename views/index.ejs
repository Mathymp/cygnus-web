                    </div>
                </div>

                <div class="input-modern-group">
                    <div class="input-label-row"><i class="ph-bold ph-house"></i> Tipo</div>
                    <div class="custom-select-wrapper">
                        <select name="tipo" class="modern-select">
                            <option value="">Cualquiera</option>
                            <option value="Casa" <%= activeFilters.tipo === 'Casa' ? 'selected' : '' %>>Casa</option>
                            <option value="Departamento" <%= activeFilters.tipo === 'Departamento' ? 'selected' : '' %>>Depto</option>
                            <option value="Oficina" <%= activeFilters.tipo === 'Oficina' ? 'selected' : '' %>>Oficina</option>
                            <option value="Terreno" <%= activeFilters.tipo === 'Terreno' ? 'selected' : '' %>>Terreno</option>
                            <option value="Parcela" <%= activeFilters.tipo === 'Parcela' ? 'selected' : '' %>>Parcela</option>
                            <option value="Industrial" <%= activeFilters.tipo === 'Industrial' ? 'selected' : '' %>>Industrial</option>
                            <option value="Local" <%= activeFilters.tipo === 'Local' ? 'selected' : '' %>>Local Comercial</option>
                        </select>
