<body class="bg-slate-50">

    <%- include('partials/navbar') %>

    <% 
        // --- PREPARACIÓN DE DATOS ---
        let props = (typeof properties !== 'undefined') ? properties : [];
        let activeFilters = (typeof filters !== 'undefined') ? filters : {};
        let hasFilters = (typeof scrollResults !== 'undefined') ? scrollResults : false;
        // Valor UF
        let ufVal = 38000;
        if(typeof indicators !== 'undefined' && indicators.uf) ufVal = indicators.uf;

        // Configuración
        let siteConfig = (typeof config !== 'undefined') ? config : {};
        siteConfig.banners = siteConfig.banners || [];
        siteConfig.slider_speed = siteConfig.slider_speed || 5;
        siteConfig.announcement_active = siteConfig.announcement_active || false;
        // Formateadores
        const fmtCLP = (v) => '$ ' + Number(v).toLocaleString('es-CL', { maximumFractionDigits: 0 });
        const fmtUF = (v) => 'UF ' + Number(v).toLocaleString('es-CL', { minimumFractionDigits: 0, maximumFractionDigits: 2 });
    %>

    <% if(siteConfig.announcement_active) { %>
        <div class="top-announcement-bar" style="background-color: <%= siteConfig.announcement_bg || '#0f172a' %>; color: <%= siteConfig.announcement_color || '#fff' %>;">
            <div class="container-announcement">
                <span><i class="fas fa-bullhorn"></i> <%- siteConfig.announcement_text %></span>
            </div>
        </div>
    <% } %>

    <header class="hero-section">
       
        <div class="swiper hero-slider">
            <div class="swiper-wrapper">
                <% if(siteConfig.banners && siteConfig.banners.length > 0) { %>
                    <% siteConfig.banners.forEach(banner => { %>
                        <div class="swiper-slide">
                            <div class="slide-bg" role="img" aria-label="Propiedades destacadas en Biobío y Ñuble" style="background-image: url('<%= banner.url %>'); background-position: <%= banner.align || '50% 50%' %>;"></div>
