        const regionSelect = document.getElementById('regionSelect');
        const comunaSelect = document.getElementById('comunaSelect');
        const savedRegion = "<%= activeFilters.region || '' %>";
        const savedComuna = "<%= activeFilters.comuna || '' %>";

        function initLocationSelectors() {
            Object.keys(chileData).forEach(region => {
                const option = document.createElement('option');
                option.value = region;
                option.textContent = region;
                if (savedRegion && (savedRegion.includes(region) || region.includes(savedRegion))) option.selected = true;
                regionSelect.appendChild(option);
            });
            if (regionSelect.value) loadComunas();
        }

        function loadComunas() {
            const selectedRegion = regionSelect.value;
            comunaSelect.innerHTML = '<option value="">Todas las comunas</option>';
            if (selectedRegion && chileData[selectedRegion]) {
                comunaSelect.disabled = false;
                chileData[selectedRegion].forEach(comuna => {
                    const option = document.createElement('option');
                    option.value = comuna;
                    option.textContent = comuna;
                    if (savedComuna === comuna) option.selected = true;
                    comunaSelect.appendChild(option);
                });
            } else {
                comunaSelect.disabled = true;
            }
        }

        function toggleCurrency(curr) {
            const minInput = document.getElementById('min_price');
            const maxInput = document.getElementById('max_price');
            minInput.value = ''; maxInput.value = '';
            if(curr === 'UF') { minInput.placeholder = "Mín UF"; maxInput.placeholder = "Máx UF"; } 
            else { minInput.placeholder = "Mín CLP"; maxInput.placeholder = "Máx CLP"; }
        }

        function formatPriceInput(input) {
            let value = input.value.replace(/\D/g, "");
            if (value === "") { input.value = ""; return; }
            input.value = new Intl.NumberFormat('es-CL').format(value);
        }

        document.addEventListener('DOMContentLoaded', initLocationSelectors);
    </script>
</body>
</html>