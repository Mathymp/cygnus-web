<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('./partials/head') %>
    <link rel="stylesheet" href="/css/login.css">
    <title>Acceso Agentes | Cygnus</title>
    <style>
        /* --- ESTILOS PRO PARA ERRORES --- */
        .input-wrapper { transition: all 0.3s ease; }
        
        /* Borde Rojo al fallar */
        .input-wrapper.error { 
            border-color: #ef4444 !important; 
            background-color: #fef2f2;
            animation: shake 0.4s ease-in-out;
        }
        .input-wrapper.error i { color: #ef4444; }

        /* Texto chiquito abajo */
        .error-msg { 
            display: none; 
            color: #ef4444; 
            font-size: 0.8rem; 
            margin-top: 6px; 
            margin-left: 4px;
            font-weight: 500;
        }

        /* Animación Shake */
        @keyframes shake { 0%, 100% { transform: translateX(0); } 25% { transform: translateX(-5px); } 75% { transform: translateX(5px); } }

        /* Spinner en Botón */
        .btn-loading { pointer-events: none; opacity: 0.8; }
        .btn-loading span { display: none; }
        .btn-loading::after {
            content: ""; display: inline-block; width: 18px; height: 18px;
            border: 2px solid #fff; border-radius: 50%;
            border-top-color: transparent; animation: spin 0.8s linear infinite;
        }
        @keyframes spin { to { transform: rotate(360deg); } }
    </style>
</head>
<body>

    <div class="bg-architect"></div>
    <div class="bg-overlay"></div>

    <main class="login-container">
        <div class="glass-card">
            
            <div class="login-header">
                <div class="logo-circle">
                    <img src="/img/logo.png" alt="Cygnus" class="logo-img" onerror="this.style.display='none'">
                </div>
                <h1 id="cardTitle">Bienvenido</h1>
                <p id="cardSubtitle">Sistema de Gestión Inmobiliaria</p>
            </div>

            <div id="loginSection" class="form-container">
                <form id="loginForm" novalidate>
                    
                    <div class="input-group">
                        <label>Correo Corporativo</label>
                        <div class="input-wrapper" id="wrap-email">
                            <i class="ph-fill ph-envelope-simple"></i>
                            <input type="email" id="email" placeholder="usuario@cygnus.cl">
                        </div>
                        <div class="error-msg" id="err-email"></div>
                    </div>

                    <div class="input-group">
                        <label>Contraseña</label>
                        <div class="input-wrapper" id="wrap-password">
                            <i class="ph-fill ph-lock-key"></i>
                            <input type="password" id="password" placeholder="••••••••">
                            <button type="button" class="btn-toggle-pass" id="togglePass" tabindex="-1">
                                <i class="ph-fill ph-eye"></i>
                            </button>
                        </div>
                        <div class="error-msg" id="err-password"></div>
                    </div>

                    <div class="forgot-pass">
                        <span class="link-text" onclick="switchView('recovery')">¿Olvidaste tu contraseña?</span>
                    </div>

                    <button type="submit" class="btn-primary" id="btnLogin">
                        <span>Iniciar Sesión</span>
                    </button>
                </form>
            </div>

            <div id="recoverySection" class="form-container hidden">
                <form id="recoveryForm" novalidate>
                    <p style="margin-bottom: 20px; font-size: 0.9rem; color: #475569;">
                        Ingresa tu correo y te enviaremos un enlace seguro.
                    </p>

                    <div class="input-group">
                        <label>Correo Registrado</label>
                        <div class="input-wrapper" id="wrap-recEmail">
                            <i class="ph-fill ph-envelope-simple"></i>
                            <input type="email" id="recEmail" placeholder="usuario@cygnus.cl">
                        </div>
                        <div class="error-msg" id="err-recEmail"></div>
                        <div id="recSuccess" style="display:none; color:#16a34a; font-size:0.9rem; margin-top:10px; font-weight:600;"></div>
                    </div>

                    <button type="submit" class="btn-primary" id="btnRec">
                        <span>Enviar Enlace</span>
                    </button>

                    <div style="margin-top: 20px;">
                        <span class="link-text" onclick="switchView('login')">Volver al inicio</span>
                    </div>
                </form>
            </div>

            <div class="login-footer">
                <p>© 2026 Cygnus Group</p>
                <div class="secure-badge"><i class="ph-fill ph-shield-check"></i> Plataforma Segura</div>
            </div>
        </div>
    </main>

    <script>
        // --- 1. LÓGICA DE LOGIN (AJAX) ---
        document.getElementById('loginForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            clearErrors();
            
            const btn = document.getElementById('btnLogin');
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            let hasError = false;

            // Validación Local
            if(!email) { showError('email', 'Ingresa tu correo'); hasError = true; }
            if(!password) { showError('password', 'Ingresa tu contraseña'); hasError = true; }
            if(hasError) return;

            setLoading(btn, true);

            try {
                const res = await fetch('/login', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email, password })
                });

                const data = await res.json();

                if (data.success) {
                    window.location.href = data.redirect; // Redirección exitosa
                } else {
                    // Mostrar error específico del servidor (rojo y chiquito)
                    showError(data.field || 'general', data.message);
                    setLoading(btn, false);
                }
            } catch (err) {
                showError('password', 'Error de conexión. Intenta nuevamente.');
                setLoading(btn, false);
            }
        });

        // --- 2. LÓGICA DE RECUPERACIÓN (AJAX) ---
        document.getElementById('recoveryForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            clearErrors();
            
            const btn = document.getElementById('btnRec');
            const email = document.getElementById('recEmail').value;
            const successMsg = document.getElementById('recSuccess');

            if(!email) return showError('recEmail', 'Ingresa tu correo para continuar.');

            setLoading(btn, true);

            try {
                const res = await fetch('/recover-password', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email })
                });
                const data = await res.json();

                if (data.success) {
                    document.getElementById('recEmail').value = '';
                    successMsg.innerText = data.message;
                    successMsg.style.display = 'block';
                } else {
                    showError('recEmail', data.message);
                }
            } catch (err) {
                showError('recEmail', 'Error al enviar. Intenta más tarde.');
            } finally {
                setLoading(btn, false);
            }
        });

        // --- HERRAMIENTAS VISUALES ---
        function showError(field, msg) {
            const wrapper = document.getElementById('wrap-' + field);
            const txt = document.getElementById('err-' + field);
            if (wrapper && txt) {
                wrapper.classList.add('error');
                txt.innerText = msg;
                txt.style.display = 'block';
            }
        }

        function clearErrors() {
            document.querySelectorAll('.input-wrapper').forEach(el => el.classList.remove('error'));
            document.querySelectorAll('.error-msg').forEach(el => el.style.display = 'none');
            const success = document.getElementById('recSuccess');
            if(success) success.style.display = 'none';
        }

        function setLoading(btn, isLoading) {
            if (isLoading) btn.classList.add('btn-loading');
            else btn.classList.remove('btn-loading');
        }

        // --- CAMBIO DE VISTAS ---
        function switchView(view) {
            clearErrors();
            const login = document.getElementById('loginSection');
            const rec = document.getElementById('recoverySection');
            const title = document.getElementById('cardTitle');
            const sub = document.getElementById('cardSubtitle');

            if (view === 'recovery') {
                login.classList.add('hidden');
                rec.classList.remove('hidden');
                title.innerText = "Recuperar Acceso";
                sub.innerText = "Te ayudaremos a volver.";
            } else {
                rec.classList.add('hidden');
                login.classList.remove('hidden');
                title.innerText = "Bienvenido";
                sub.innerText = "Sistema de Gestión Inmobiliaria";
            }
        }

        // --- PASSWORD TOGGLE ---
        const toggleBtn = document.getElementById('togglePass');
        const passInput = document.getElementById('password');
        if (toggleBtn) {
            toggleBtn.addEventListener('click', () => {
                const isPass = passInput.type === 'password';
                passInput.type = isPass ? 'text' : 'password';
                toggleBtn.querySelector('i').className = isPass ? 'ph-fill ph-eye-slash' : 'ph-fill ph-eye';
            });
        }
    </script>
</body>
</html>