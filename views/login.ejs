<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('./partials/head') %>
    <link rel="stylesheet" href="/css/login.css">
    <title>Acceso Agentes | Cygnus</title>
    
    <style>
        /* --- ESTILOS VISUALES CORREGIDOS --- */
        
        .input-wrapper { 
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            border: 1px solid #e2e8f0; 
        }
        
        /* Error en Campo */
        .input-wrapper.error { 
            border-color: #ef4444 !important;
            background-color: #fef2f2 !important;
            animation: shake 0.4s ease-in-out;
        }
        .input-wrapper.error i { color: #ef4444 !important; }

        /* Mensaje Error Pequeño */
        .error-msg { 
            display: none; 
            color: #ef4444; 
            font-size: 0.85rem; 
            margin-top: 5px; margin-left: 4px; font-weight: 500;
        }
        .error-msg.visible { display: block; }

        @keyframes shake { 0%, 100% { transform: translateX(0); } 25% { transform: translateX(-5px); } 75% { transform: translateX(5px); } }

        /* Spinner Cargando */
        .btn-loading { color: transparent !important; pointer-events: none; position: relative; }
        .btn-loading::after {
            content: ""; position: absolute; top: 50%; left: 50%; width: 20px; height: 20px; margin: -10px;
            border: 2px solid #fff; border-top-color: transparent; border-radius: 50%; animation: spin 0.8s linear infinite;
        }
        @keyframes spin { to { transform: rotate(360deg); } }

        /* --- SOLUCIÓN AL CUADRADO ROJO VACÍO --- */
        .alert-global {
            padding: 12px; border-radius: 8px; margin-bottom: 20px; font-size: 0.9rem; text-align: center;
            display: none; /* Oculto por defecto */
        }
        /* Solo mostrar si tiene contenido */
        .alert-global:not(:empty) { display: block; }
        
        .alert-error { background: #fee2e2; color: #b91c1c; border: 1px solid #fecaca; }
        .alert-success { background: #dcfce7; color: #15803d; border: 1px solid #bbf7d0; }
    </style>
</head>
<body>

    <div class="bg-architect"></div>
    <div class="bg-overlay"></div>

    <main class="login-container">
        <div class="glass-card">
            
            <div class="login-header">
                <div class="logo-circle">
                    <img src="/img/logo.png" alt="Cygnus" class="logo-img" onerror="this.style.display='none'">
                </div>
                <h1 id="cardTitle">Bienvenido</h1>
                <p id="cardSubtitle">Sistema de Gestión Inmobiliaria</p>
            </div>

            <div id="serverAlert" class="alert-global 
                <%= locals.error ? 'alert-error' : (locals.successMessage ? 'alert-success' : '') %>">
                <%= locals.error || locals.successMessage || '' %>
            </div>

            <div id="loginSection" class="form-container">
                <form id="loginForm" novalidate>
                    
                    <div class="input-group">
                        <label>Correo Corporativo</label>
                        <div class="input-wrapper" id="wrap-email">
                            <i class="ph-fill ph-envelope-simple"></i>
                            <input type="email" id="email" placeholder="usuario@cygnus.cl" autocomplete="email">
                        </div>
                        <div class="error-msg" id="err-email"></div>
                    </div>

                    <div class="input-group">
                        <label>Contraseña</label>
                        <div class="input-wrapper" id="wrap-password">
                            <i class="ph-fill ph-lock-key"></i>
                            <input type="password" id="password" placeholder="••••••••" autocomplete="current-password">
                            <button type="button" class="btn-toggle-pass" id="togglePass" tabindex="-1">
                                <i class="ph-fill ph-eye"></i>
                            </button>
                        </div>
                        <div class="error-msg" id="err-password"></div>
                    </div>

                    <div class="forgot-pass">
                        <span class="link-text" onclick="switchView('recovery')">¿Olvidaste tu contraseña?</span>
                    </div>

                    <button type="submit" class="btn-primary" id="btnLogin">Inicia Sesión</button>
                </form>
            </div>

            <div id="recoverySection" class="form-container hidden">
                <form id="recoveryForm" novalidate>
                    <p style="margin-bottom: 20px; font-size: 0.9rem; color: #475569; text-align: center;">
                        Ingresa tu correo y te enviaremos un enlace seguro para restablecer tu clave.
                    </p>

                    <div class="input-group">
                        <label>Correo Registrado</label>
                        <div class="input-wrapper" id="wrap-recEmail">
                            <i class="ph-fill ph-envelope-simple"></i>
                            <input type="email" id="recEmail" placeholder="usuario@cygnus.cl">
                        </div>
                        <div class="error-msg" id="err-recEmail"></div>
                        
                        <div id="recSuccess" class="alert-global alert-success" style="margin-top:10px;"></div>
                    </div>

                    <button type="submit" class="btn-primary" id="btnRec">Enviar Enlace</button>

                    <div style="margin-top: 20px; text-align: center;">
                        <span class="link-text" onclick="switchView('login')">
                            <i class="ph-bold ph-arrow-left"></i> Volver al inicio
                        </span>
                    </div>
                </form>
            </div>

            <div class="login-footer">
                <p>© 2026 Cygnus Group</p>
                <div class="secure-badge"><i class="ph-fill ph-shield-check"></i> Plataforma Segura</div>
            </div>
        </div>
    </main>

    <script>
        // --- 1. LÓGICA LOGIN (AJAX) ---
        document.getElementById('loginForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            clearErrors();
            
            const btn = document.getElementById('btnLogin');
            const email = document.getElementById('email').value.trim();
            const password = document.getElementById('password').value;

            if(!email) return showError('email', 'Ingresa tu correo');
            if(!password) return showError('password', 'Ingresa tu contraseña');

            setLoading(btn, true);

            try {
                const res = await fetch('/login', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email, password })
                });

                const data = await res.json();

                if (data.success) {
                    window.location.href = data.redirect;
                } else {
                    showError(data.field || 'password', data.message);
                    setLoading(btn, false);
                }
            } catch (err) {
                showError('password', 'Error de conexión. Intenta nuevamente.');
                setLoading(btn, false);
            }
        });

        // --- 2. LÓGICA RECUPERACIÓN (AJAX) ---
        document.getElementById('recoveryForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            clearErrors();
            
            const btn = document.getElementById('btnRec');
            const email = document.getElementById('recEmail').value.trim();

            if(!email) return showError('recEmail', 'Correo inválido');

            setLoading(btn, true);

            try {
                const res = await fetch('/recover-password', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email })
                });
                const data = await res.json();

                if(data.success) {
                    document.getElementById('recEmail').value = '';
                    const box = document.getElementById('recSuccess');
                    box.innerText = data.message;
                    box.style.display = 'block';
                } else {
                    showError('recEmail', data.message);
                }
            } catch (err) {
                showError('recEmail', 'Error al procesar la solicitud.');
            } finally {
                setLoading(btn, false);
            }
        });

        // --- UTILIDADES ---
        function showError(field, msg) {
            const wrap = document.getElementById('wrap-' + field);
            const txt = document.getElementById('err-' + field);
            if(wrap && txt) {
                wrap.classList.add('error');
                txt.innerText = msg;
                txt.classList.add('visible');
            }
        }

        function clearErrors() {
            document.querySelectorAll('.input-wrapper').forEach(el => el.classList.remove('error'));
            document.querySelectorAll('.error-msg').forEach(el => el.classList.remove('visible'));
            
            // Limpiar alertas globales
            const alert = document.getElementById('serverAlert');
            if(alert && alert.innerText.trim() === '') alert.style.display = 'none';
            
            const recSuccess = document.getElementById('recSuccess');
            if(recSuccess) recSuccess.style.display = 'none';
        }

        function setLoading(btn, isLoading) {
            if(isLoading) btn.classList.add('btn-loading');
            else btn.classList.remove('btn-loading');
        }

        function switchView(view) {
            clearErrors();
            const login = document.getElementById('loginSection');
            const rec = document.getElementById('recoverySection');
            const title = document.getElementById('cardTitle');
            const sub = document.getElementById('cardSubtitle');

            if(view === 'recovery') {
                login.classList.add('hidden');
                rec.classList.remove('hidden');
                title.innerText = "Recuperar Acceso";
                sub.innerText = "Te ayudaremos a volver.";
            } else {
                rec.classList.add('hidden');
                login.classList.remove('hidden');
                title.innerText = "Bienvenido";
                sub.innerText = "Sistema de Gestión Inmobiliaria";
            }
        }

        const toggleBtn = document.getElementById('togglePass');
        if(toggleBtn) {
            toggleBtn.addEventListener('click', function() {
                const input = document.getElementById('password');
                const isPass = input.type === 'password';
                input.type = isPass ? 'text' : 'password';
                this.querySelector('i').className = isPass ? 'ph-fill ph-eye-slash' : 'ph-fill ph-eye';
            });
        }
        
        // Inicialización: Ocultar alertas vacías al cargar
        document.addEventListener("DOMContentLoaded", () => {
             const alert = document.getElementById('serverAlert');
             if(alert && !alert.innerText.trim()) alert.style.display = 'none';
        });
    </script>
</body>
</html>