<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('./partials/head') %>
    <script src="https://unpkg.com/@phosphor-icons/web"></script>
    <title>Acceso Agentes | Cygnus</title>
    
    <style>
        /* --- RESET & BASE --- */
        * { box-sizing: border-box; outline: none; }
        
        body {
            margin: 0; padding: 0;
            height: 100vh; width: 100%;
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
            background-color: #0f172a;
            /* Imagen de fondo de alta calidad */
            background-image: url('https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?q=80&w=2070&auto=format&fit=crop');
            background-size: cover;
            background-position: center;
            display: flex; align-items: center; justify-content: center;
            overflow: hidden;
        }

        /* Capa oscura para contraste */
        .bg-overlay {
            position: absolute; inset: 0;
            background: linear-gradient(135deg, rgba(15, 23, 42, 0.92) 0%, rgba(30, 58, 138, 0.85) 100%);
            z-index: 1;
        }

        /* --- CONTENEDOR CENTRAL --- */
        .login-wrapper {
            position: relative; z-index: 10;
            width: 100%; 
            max-width: 480px; /* Ancho aumentado para que no se vea "achicado" */
            padding: 20px;
        }

        /* Tarjeta Blanca Limpia */
        .glass-card {
            background: #ffffff;
            border-radius: 24px;
            padding: 48px 40px; /* Más padding interno */
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
            text-align: center;
            position: relative;
        }

        /* --- LOGO (CORREGIDO: Sin círculo restrictivo) --- */
        .logo-area {
            margin-bottom: 25px;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 60px; /* Altura fija para evitar saltos */
        }
        
        .logo-img {
            max-height: 100%; /* Se adapta a la altura */
            max-width: 240px; /* Ancho máximo generoso */
            width: auto;
            object-fit: contain;
            display: block;
        }

        /* Títulos */
        h1 { margin: 0; font-size: 1.75rem; color: #0f172a; font-weight: 700; letter-spacing: -0.5px; }
        .subtitle { margin: 8px 0 32px; color: #64748b; font-size: 0.95rem; }

        /* --- INPUTS MODERNOS --- */
        .form-group { margin-bottom: 24px; text-align: left; }
        
        .form-group label {
            display: block; font-size: 0.85rem; font-weight: 600; color: #334155; margin-bottom: 8px;
        }

        .input-box {
            position: relative;
            display: flex; align-items: center;
            width: 100%; 
            height: 52px; /* Input más alto y cómodo */
            background: #f8fafc;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            padding: 0 16px;
            transition: all 0.2s ease-in-out;
        }

        .input-box i { font-size: 1.3rem; color: #94a3b8; margin-right: 12px; }

        .input-box input {
            flex: 1; width: 100%; height: 100%;
            border: none; background: transparent;
            font-size: 1rem; color: #1e293b;
            padding: 0;
        }
        .input-box input::placeholder { color: #cbd5e1; }

        /* Foco Azul Pro */
        .input-box:focus-within {
            border-color: #2563eb;
            background: #ffffff;
            box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.1);
        }

        /* Error Rojo */
        .input-box.error {
            border-color: #ef4444 !important;
            background-color: #fff1f2 !important;
            animation: shake 0.3s ease-in-out;
        }
        .input-box.error i { color: #ef4444 !important; }
        .err-text { display: none; color: #dc2626; font-size: 0.8rem; margin-top: 6px; font-weight: 500; }
        .err-text.show { display: block; }
        @keyframes shake { 0%, 100% { transform: translateX(0); } 25% { transform: translateX(-4px); } 75% { transform: translateX(4px); } }

        /* --- BOTONES --- */
        .btn-main {
            width: 100%; height: 52px;
            background: #2563eb; color: white;
            border: none; border-radius: 12px;
            font-size: 1rem; font-weight: 600;
            cursor: pointer;
            transition: background 0.2s, transform 0.1s;
            box-shadow: 0 4px 6px -1px rgba(37, 99, 235, 0.2);
        }
        .btn-main:hover { background: #1d4ed8; transform: translateY(-1px); }
        .btn-main:active { transform: translateY(0); }
        
        .btn-main.loading { color: transparent !important; pointer-events: none; position: relative; }
        .btn-main.loading::after {
            content: ""; position: absolute; left: 50%; top: 50%;
            width: 20px; height: 20px; margin: -10px;
            border: 2px solid rgba(255,255,255,0.3); border-top-color: #fff;
            border-radius: 50%; animation: spin 0.8s linear infinite;
        }
        @keyframes spin { to { transform: rotate(360deg); } }

        /* Links */
        .forgot-link { text-align: right; margin-bottom: 24px; font-size: 0.9rem; }
        .forgot-link span { color: #2563eb; cursor: pointer; font-weight: 500; }
        .forgot-link span:hover { text-decoration: underline; }

        .back-btn {
            position: absolute; top: -50px; left: 0;
            display: inline-flex; align-items: center; gap: 8px;
            color: rgba(255,255,255,0.8); text-decoration: none;
            font-size: 0.9rem; font-weight: 500;
            padding: 8px 16px; border-radius: 20px;
            background: rgba(255,255,255,0.1); border: 1px solid rgba(255,255,255,0.1);
            backdrop-filter: blur(4px);
            transition: all 0.2s;
        }
        .back-btn:hover { background: rgba(255,255,255,0.2); color: white; }

        /* Alertas */
        .alert-box { padding: 12px; border-radius: 8px; margin-bottom: 24px; font-size: 0.9rem; display: none; }
        .alert-box.visible { display: block; }
        .alert-error { background: #fee2e2; color: #991b1b; border: 1px solid #fecaca; }
        .alert-success { background: #dcfce7; color: #166534; border: 1px solid #bbf7d0; }

        .footer { margin-top: 32px; font-size: 0.8rem; color: #94a3b8; border-top: 1px solid #f1f5f9; padding-top: 20px; }
        .hidden { display: none !important; }
        .toggle-pass { background:none; border:none; cursor:pointer; color:#94a3b8; padding:5px; display:flex; }
        .toggle-pass:hover { color:#2563eb; }
    </style>
</head>
<body>

    <div class="bg-overlay"></div>

    <div class="login-wrapper">
        <a href="/" class="back-btn"><i class="ph-bold ph-arrow-left"></i> Volver al Inicio</a>

        <div class="glass-card">
            
            <div class="logo-area">
                <img src="/img/logo.png" alt="Cygnus" class="logo-img" onerror="this.style.display='none'">
            </div>

            <h1 id="titleText">Bienvenido</h1>
            <p class="subtitle" id="subText">Sistema de Gestión Inmobiliaria</p>

            <div id="globalAlert" class="alert-box <%= locals.error ? 'alert-error visible' : (locals.successMessage ? 'alert-success visible' : '') %>">
                <%= locals.error || locals.successMessage || '' %>
            </div>

            <form id="loginForm">
                <div class="form-group">
                    <label>Correo Corporativo</label>
                    <div class="input-box" id="box-email">
                        <i class="ph-fill ph-envelope-simple"></i>
                        <input type="email" id="email" placeholder="agente@cygnusgroup.cl">
                    </div>
                    <div class="err-text" id="msg-email"></div>
                </div>

                <div class="form-group">
                    <label>Contraseña</label>
                    <div class="input-box" id="box-pass">
                        <i class="ph-fill ph-lock-key"></i>
                        <input type="password" id="password" placeholder="••••••••">
                        <button type="button" class="toggle-pass" id="btnEye"><i class="ph-fill ph-eye"></i></button>
                    </div>
                    <div class="err-text" id="msg-pass"></div>
                </div>

                <div class="forgot-link">
                    <span onclick="showRecovery()">¿Olvidaste tu contraseña?</span>
                </div>

                <button type="submit" class="btn-main" id="btnLog">Ingresar</button>
            </form>

            <form id="recoveryForm" class="hidden">
                <p style="font-size:0.95rem; color:#475569; margin-bottom:24px; line-height:1.5;">
                    Ingresa tu correo y te enviaremos un enlace de acceso seguro a tu bandeja de entrada.
                </p>

                <div class="form-group">
                    <label>Correo Registrado</label>
                    <div class="input-box" id="box-recEmail">
                        <i class="ph-fill ph-envelope-simple"></i>
                        <input type="email" id="recEmail" placeholder="agente@cygnusgroup.cl">
                    </div>
                    <div class="err-text" id="msg-recEmail"></div>
                </div>

                <div id="recAlert" class="alert-box alert-success"></div>

                <button type="submit" class="btn-main" id="btnRec">Enviar Enlace</button>
                
                <div style="margin-top:24px; font-size:0.9rem;">
                    <span style="color:#64748b; cursor:pointer;" onclick="showLogin()">Cancelar y volver</span>
                </div>
            </form>

            <div class="footer">
                © 2026 Cygnus Group • Plataforma Segura
            </div>
        </div>
    </div>

    <script>
        // LOGIN AJAX
        document.getElementById('loginForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            resetUI();
            const email = document.getElementById('email').value.trim();
            const password = document.getElementById('password').value;
            const btn = document.getElementById('btnLog');

            let error = false;
            if(!email) { markError('email', 'Ingresa tu correo'); error = true; }
            if(!password) { markError('pass', 'Ingresa tu contraseña'); error = true; }
            if(error) return;

            setLoading(btn, true);

            try {
                const res = await fetch('/login', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email, password })
                });
                const data = await res.json();

                if(data.success) window.location.href = data.redirect;
                else {
                    const map = { 'email': 'email', 'password': 'pass' };
                    markError(map[data.field] || 'pass', data.message);
                }
            } catch (err) {
                markError('pass', 'Error de conexión.');
            } finally {
                setLoading(btn, false);
            }
        });

        // RECOVERY AJAX
        document.getElementById('recoveryForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            resetUI();
            const email = document.getElementById('recEmail').value.trim();
            const btn = document.getElementById('btnRec');

            if(!email) return markError('recEmail', 'Correo inválido');

            setLoading(btn, true);

            try {
                const res = await fetch('/recover-password', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email })
                });
                const data = await res.json();

                if(data.success) {
                    document.getElementById('recEmail').value = '';
                    const al = document.getElementById('recAlert');
                    al.innerText = data.message;
                    al.classList.add('visible');
                } else {
                    markError('recEmail', data.message);
                }
            } catch (err) {
                markError('recEmail', 'Error al procesar.');
            } finally {
                setLoading(btn, false);
            }
        });

        // UTILS
        function markError(id, msg) {
            const box = document.getElementById('box-' + id);
            const txt = document.getElementById('msg-' + id);
            if(box && txt) {
                box.classList.add('error');
                txt.innerText = msg;
                txt.classList.add('show');
            }
        }
        function resetUI() {
            document.querySelectorAll('.input-box').forEach(el => el.classList.remove('error'));
            document.querySelectorAll('.err-text').forEach(el => el.classList.remove('show'));
            const ga = document.getElementById('globalAlert');
            if(ga && !ga.innerText.trim()) ga.classList.remove('visible');
            document.getElementById('recAlert').classList.remove('visible');
        }
        function setLoading(btn, state) {
            state ? btn.classList.add('loading') : btn.classList.remove('loading');
        }
        function showRecovery() {
            resetUI();
            document.getElementById('loginForm').classList.add('hidden');
            document.getElementById('recoveryForm').classList.remove('hidden');
            document.getElementById('titleText').innerText = "Recuperar Acceso";
            document.getElementById('subText').innerText = "Te ayudaremos a volver";
        }
        function showLogin() {
            resetUI();
            document.getElementById('recoveryForm').classList.add('hidden');
            document.getElementById('loginForm').classList.remove('hidden');
            document.getElementById('titleText').innerText = "Bienvenido";
            document.getElementById('subText').innerText = "Sistema de Gestión Inmobiliaria";
        }
        const btnEye = document.getElementById('btnEye');
        if(btnEye) {
            btnEye.addEventListener('click', () => {
                const inp = document.getElementById('password');
                const isP = inp.type === 'password';
                inp.type = isP ? 'text' : 'password';
                btnEye.innerHTML = isP ? '<i class="ph-fill ph-eye-slash"></i>' : '<i class="ph-fill ph-eye"></i>';
            });
        }
        document.addEventListener("DOMContentLoaded", () => {
             const alert = document.getElementById('globalAlert');
             if(alert && !alert.innerText.trim()) alert.style.display = 'none';
        });
    </script>
</body>
</html>